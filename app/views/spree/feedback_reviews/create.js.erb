<% if @feedback_review.valid? %>
    $("div#feedback_review_<%= @review.id %>").html("<%= escape_javascript(render(:partial => 'spree/feedback_reviews/summary', :locals => {:review => @review})) %>");
    $("div#feedback_review_<%= @review.id %>").find(".star").rating({required: true});
<% else %>
    $("div#feedback_review_<%= @review.id %>").html("<%= escape_javascript(render(:partial => 'spree/feedback_reviews/form', :locals => {:review => @review})) %>");
<% end %>
